    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script>
        $(document).ready(function() {
            // Mobile Menu Toggle
            $('#mobile-menu-button').click(function() {
                $('#mobile-menu').slideToggle();
            });

            // Smooth scrolling for anchors
            $('a[href*="#"]').not('[href="#"]').not('[href="#0"]').click(function(event) {
                if (location.pathname.replace(/^\//, '') == this.pathname.replace(/^\//, '') && location.hostname == this.hostname) {
                    var target = $(this.hash);
                    target = target.length ? target : $('[name=' + this.hash.slice(1) + ']');
                    if (target.length) {
                        event.preventDefault();
                        $('html, body').animate({
                            scrollTop: target.offset().top - 80 // Adjust for fixed navbar height
                        }, 800);
                         // Close mobile menu if clicking a link within it
                        if ($(this).closest('#mobile-menu').length) {
                             $('#mobile-menu').slideUp();
                        }
                    }
                }
            });

            // FAQ Toggle - Corrected Logic
            $('.faq-question').click(function() {
                const $parentItem = $(this).closest('.faq-item'); // Use closest for robustness
                const $icon = $(this).find('i');
                const $answer = $parentItem.find('.faq-answer'); // Find the answer within this item

                // Optional: Close other open FAQs
                $('.faq-item.active').not($parentItem).each(function() {
                    $(this).removeClass('active')
                           .find('.faq-question i').removeClass('fa-minus').addClass('fa-plus');
                    $(this).find('.faq-answer').css('max-height', '0'); // Explicitly set max-height to 0 for transition
                });


                // Toggle the clicked one
                if ($parentItem.hasClass('active')) {
                    // Is currently active, so close it
                    $parentItem.removeClass('active');
                    $icon.removeClass('fa-minus').addClass('fa-plus');
                    $answer.css('max-height', '0'); // Set max-height to 0 to trigger close transition
                } else {
                    // Is not active, so open it
                    $parentItem.addClass('active');
                    $icon.removeClass('fa-plus').addClass('fa-minus');
                    // Set max-height to the value defined in CSS to trigger open transition
                    // A large enough value (like 500px) ensures the content fits
                    $answer.css('max-height', '500px'); // Ensure this matches your CSS active state max-height
                }
            });

            // Initialize the first FAQ item on page load
            const $firstFaqItem = $('.faq-item:first-child');
            if ($firstFaqItem.length) {
                 $firstFaqItem.addClass('active');
                 $firstFaqItem.find('.faq-question i').removeClass('fa-plus').addClass('fa-minus');
                 // For the first item, set max-height directly on load
                 $firstFaqItem.find('.faq-answer').css('max-height', '500px').show(); // Also add .show() just in case initial display is none
            }


            // Animate elements when they come into view
            $(window).scroll(function() {
                $('.card, .roadmap-item').each(function() { // Added roadmap items to animation
                    var elementTop = $(this).offset().top;
                    var elementBottom = elementTop + $(this).outerHeight();
                    var viewportTop = $(window).scrollTop();
                    var viewportBottom = viewportTop + $(window).height();

                     // Add an offset to trigger animation slightly before element is fully visible
                     var offset = $(window).height() * 0.1; // 10% of viewport height

                    if (elementBottom > viewportTop + offset && elementTop < viewportBottom - offset) {
                        // Check if element already has the class to prevent re-adding
                        if (!$(this).hasClass('animate__animated')) {
                             $(this).addClass('animate__animated animate__fadeInUp');
                        }
                    } else {
                        // Optional: Remove animation class when out of view
                        // $(this).removeClass('animate__animated animate__fadeInUp');
                    }
                });
            });

            // Trigger scroll event on page load to animate elements already in view
            $(window).trigger('scroll');
        });

        // Navbar scroll effect (keep this separate listener)
        window.addEventListener('scroll', function() {
            const navbar = document.querySelector('.navbar');
            if (window.scrollY > 50) {
                navbar.style.background = 'rgba(18, 18, 18, 0.95)';
                navbar.style.boxShadow = '0 2px 10px rgba(0, 0, 0, 0.3)';
            } else {
                navbar.style.background = 'rgba(18, 18, 18, 0.8)';
                navbar.style.boxShadow = 'none';
            }
        });
    </script>
</body>
